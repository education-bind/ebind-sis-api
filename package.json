{
  "name": "ebind-backend",
  "version": "1.0.0",
  "description": "education bind backend using node express",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start:production": "NODE_ENV=production ts-node ./src/server.ts",
    "start:dev": "NODE_ENV=development nodemon ./src/server.ts",
    "migrate": "npx sequelize-cli db:migrate",
    "down": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "undo-seed": "npx sequelize-cli db:seed:undo",
    "test": "NODE_ENV=test  npm run down && npm run migrate && npm run seed && mocha --timeout 30000 --exit",
    "coverage": "nyc npm run test | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/education-bind/ebind-backend.git"
  },
  "author": "Uwambaje Eddy & Mugisha Abdoul",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/education-bind/ebind-backend/issues"
  },
  "homepage": "https://github.com/education-bind/ebind-backend#readme",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.23",
    "coveralls": "^3.1.1",
    "mocha": "^10.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "sequelize-cli": "^6.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.23.2"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js",
      "test/*.test.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-lcov"
    ],
    "exclude": [
      "node_modules/*",
      "src/database/seeders/*",
      "src/index.js",
      "coverage/*"
    ]
  }
}
